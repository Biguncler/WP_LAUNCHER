<?xml version="1.0" encoding="utf-8"?>
<com.example.biguncler.wp_launcher.view.ClickEffectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:padding="4dp"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/view_iv_item_adapter_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/view_tv_item_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textColor="?attr/th_text_color"
        android:textSize="18sp" />

</com.example.biguncler.wp_launcher.view.ClickEffectLayout>