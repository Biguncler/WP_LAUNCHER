<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="?attr/th_text_color"
        android:text="Metro Color"/>
    <com.example.biguncler.wp_launcher.view.MetroColorsLayout
        android:id="@+id/layout_metro_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.example.biguncler.wp_launcher.view.ThemeColorsLayout
        android:id="@+id/layout_theme_colors"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>